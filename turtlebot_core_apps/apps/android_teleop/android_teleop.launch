<launch>
  <!--  
    Right now, the android app is hard coded to look for /cmd_vel as the input
    topic.
   -->
  <arg name="base" value="$(optenv TURTLEBOT_BASE kobuki)"/>
  
  <!-- 
    Cmd_vel_mux, safety_controller, velocity_smoother - only available for kobuki 
  -->
  <include file="$(find turtlebot_teleop)/launch/$(arg base)/_safe_teleop.launch"/>

  <node pkg="mjpeg_server" type="mjpeg_server"  name="mjpeg_server" output="screen">
    <param name="port" type="int" value="8181" />
  </node>
  <param name="camera/rgb/image_color/compressed/jpeg_quality" value="22"/>

  <include file="$(find turtlebot_bringup)/launch/3dsensor.launch"/>

  <!-- Make a slower camera feed available. -->
  <node pkg="topic_tools" type="throttle" name="camera_throttle" output="screen"
        args="messages camera/rgb/image_color/compressed 5"/>
</launch>

